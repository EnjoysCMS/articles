{% extends '@a/layout.twig' %}
{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Список статей</h2>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                {% if access2route('articles/admin/add') %}
                    <a class="btn btn-sm btn-primary mb-3"
                       href="{{ url('articles/admin/add') }}">Добавить новую статью</a>
                {% endif %}

                <ul>
                    {% for article in articles %}
                        <li><h4>{{ article.title }} </h4> <a href="{{ path('article/view', {'slug': article.slug}) }}">link</a> </li>
                    {% endfor %}
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
{% endblock %}
